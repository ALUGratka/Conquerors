<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.conquerors.app">
    <!-- Permisions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- ACTIVITIES -->
        <activity
            android:name=".view.splash.SplashActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.home.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".view.register.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:screenOrientation="fullSensor"
            android:parentActivityName=".view.login.LoginActivity"
            android:windowSoftInputMode="adjustResize"
            tools:targetApi="jelly_bean">
        </activity>
        <activity
            android:name=".view.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".view.everydayPrize.EverydayPrizeActivity"
            android:label="Get prize"
            android:screenOrientation="fullSensor">
        </activity>
        <activity android:name=".view.createCharacter.CreateCharacterSexActivity"/>
        <activity android:name=".view.createCharacter.CreateCharacterClassActivity"/>
        <activity android:name=".view.createCharacter.CreateCharacterAppearanceActivity"/>
        <activity android:name=".view.createCharacter.CreateCharacterNameActivity"/>
        <activity android:name=".view.createCharacter.CreateCharacterSummaryActivity"/>
        </application>

</manifest>