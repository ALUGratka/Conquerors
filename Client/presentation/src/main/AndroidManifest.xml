<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.conquerors.app">
    <!-- Permisions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <!-- ACTIVITIES -->
        <activity
            android:name=".view.splash.SplashActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Splash">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->
<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>

        <activity
            android:name=".view.home.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".view.register.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:parentActivityName=".view.login.LoginActivity"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".view.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".view.everydayPrize.EverydayPrizeActivity"
            android:label="Get prize"
            android:screenOrientation="fullSensor" />


        <activity
            android:name=".view.createCharacter.CreateCharacterActivity"
            android:label="@string/title_activity_create_character"
            android:parentActivityName=".view.home.HomeActivity"
            android:screenOrientation="fullSensor" />


        <activity
            android:name=".view.profile.my.MyProfileActivity"
            android:label="@string/tittle_activity_my_profile"
            android:parentActivityName=".view.home.HomeActivity"
            android:screenOrientation="fullSensor"
            tools:targetApi="jelly_bean" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>