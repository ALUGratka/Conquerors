    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/friend_image"
        android:layout_toRightOf="@+id/friend_image"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:id="@+id/friend_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/friend_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/font_huge"
                android:textStyle="bold"
                tools:text="Header text here it is for not too long input because we do not want it to break into multiline text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_name_layout"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <LinearLayout
                android:id="@+id/games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/games_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/my_profile_games"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingStart="4dp"
                    android:text="@string/friend_games"/>

                <TextView
                    android:id="@+id/friend_games"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingStart="4dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font_normal_dense"
                    tools:text="12345"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/characters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/characters_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/my_profile_characters"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingStart="4dp"
                    android:text="@string/friend_characters"/>

                <TextView
                    android:id="@+id/friend_characters"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingStart="4dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font_normal_dense"
                    tools:text="12345"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
